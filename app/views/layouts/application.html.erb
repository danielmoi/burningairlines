<!DOCTYPE html>
<html>
  <head>
    <title>Burningairlines</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav>
      <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-send" aria-hidden="true"></span> HappyAirline</a>
          </div>
          <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to "Flights", flights_home_path %></li>
            <li><%= link_to "Airplanes", airplanes_path %></li>
            <% if @current_user.present? %>
            <li><a href="/users/<%=@current_user.id%>">Profile</a></li>
            <li><%=link_to 'Reservations', new_reservation_path%></li>
            <li><%= link_to "Logout #{@current_user.username.capitalize}", login_path, :method => :delete%></li>
            <li class="dropdown">
              <% if @current_user.admin? %>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">ADMIN
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li class="dropdown-header">Admin</li>
                <li><%= link_to "All Flight", flights_path %></li>
                <li><%= link_to "Add Flight", new_flight_path %></li>
                <li><%= link_to "All Planes", airplanes_path %></li>
                <li><%= link_to "Add Airplane", new_airplane_path %></li>
                <li><%= link_to "All Users", users_path %></li>
                <% end %>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Signup", signup_path %></li>
            <li><%= link_to "Login", login_path %></li>
            <% end %>
          </ul>
      </ul>
    </div>
  </div>
</div>
</nav>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
